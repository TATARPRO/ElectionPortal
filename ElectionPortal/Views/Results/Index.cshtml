@model IEnumerable<ElectionPortal.Models.Result>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Get result", "CalculateResults")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoteCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post.PostName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>           
            @Html.ActionLink(item.CandidateName, "Edit", new { id = item.CandidateId }) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VoteCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Post.PostName)
        </td>
        <td>
            
            @using (Html.BeginForm("Delete", "Results", FormMethod.Get))
            {

                @Html.Hidden("id", item.CandidateId)
                <input type="submit" value="Delete" />
            }
        </td>
    </tr>
}

</table>
