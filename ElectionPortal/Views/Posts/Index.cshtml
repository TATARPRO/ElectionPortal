@model IEnumerable<ElectionPortal.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.ActionLink(item.PostName, "Edit", new { id = item.PostId })
        </td>
        <td>          
           
            @using (Html.BeginForm("Delete", "Posts", FormMethod.Get))
            {

                @Html.Hidden("id", item.PostId)
                <input type="submit" value="Delete" />
            }
        </td>
    </tr>
}

</table>
